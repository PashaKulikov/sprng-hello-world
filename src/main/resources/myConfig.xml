<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation=
               "http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="myService" class="ru.learnup.spring.helloworld.services.MyService">

        <property name="loggers">
            <list>
                <ref bean ="emailLogger" />
                <ref bean ="consoleLogger" />
                <ref bean ="errorLogger" />
            </list>
        </property>
    </bean>

    <bean id="consoleLogger" class="ru.learnup.spring.helloworld.services.ConsoleLogger"/>
    <bean id="errorLogger" class="ru.learnup.spring.helloworld.services.ErrorLogger"/>
    <bean id="emailLogger" class="ru.learnup.spring.helloworld.services.EmailLogger"/>


</beans>
